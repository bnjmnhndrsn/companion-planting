<div class="form-group">
    <label for="plant"><%- 'Choose a plant' %></label>
    <select name="plant" class="form-control" style="width:200px;">
        <option></option>
        <% _.each(plants, function(plant){ %>
            <option value="<%- plant.id %>"><%- plant.name %></option>
        <% }) %>
    </select>
</div>
